@model IEnumerable<MusicStoreAPI.Models.CMS.Managment>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/customStyles.css" />
</head>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
 
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            <th>
                <h6 class="mb-4">Status</h6>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
 
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width: 60%;">
                    @Html.DisplayFor(modelItem => item.Descriptions)
                    <br><br>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success m-2">Edit<i class="bi bi-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info m-2">Details<i class="bi bi-file-bar-graph"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary m-2">Delete<i class="bi bi-trash"></i></a>
                </td>
                <td>
                    @if (item.isActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Deactive</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
            </tr>
        }
    </tbody>
</table>
