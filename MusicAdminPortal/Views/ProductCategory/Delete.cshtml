@model MusicStoreAPI.Models.CMS.ProductCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">

        <div class="col-sm-12 ">
            <div class="bg-secondary rounded h-100 p-4">

                <h6 class="mb-4 text-center" style="font-size: larger; color: red;">Are you sure you want to delete this?</h6>
                <label asp-for="Name"> Name</label>

                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" id="floatingInput" placeholder="" disabled>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <label asp-for="Descriptions">Description</label>

                <div class="form-floating">
                    <textarea asp-for="Descriptions" class="form-control" style="height: 300px;" placeholder="" disabled></textarea>
                    <span asp-validation-for="Descriptions" class="text-danger"></span>

                </div>

                <label asp-for="WebHeaderId">WebHeader</label>

                <div class="form-floating mb-3">
                    <input asp-for="WebHeader.Name" class="form-control" id="floatingInputCategory" placeholder="" disabled>
                    <span asp-validation-for="WebHeaderId" class="text-danger"></span>
                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-outline-primary m-2">
                    <a asp-action="Index" class="btn btn-outline-info m-2">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>

