@model MusicStoreAPI.Models.CMS.ProductCategory

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4 text-center">Create Product Category</h6>
                <form asp-action="Create">
                    <label asp-for="Name">Enter Sub-Category Name</label>

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Name">
                        <label asp-for="Name">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <label asp-for="Name">Enter Description</label>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Descriptions" class="form-control" id="floatingDescription" placeholder="Description"></textarea>
                        <label asp-for="Descriptions">Description</label>
                        <span asp-validation-for="Descriptions" class="text-danger"></span>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input asp-for="isActive" class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                        <label asp-for="isActive" class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                    </div>                 
                    <div class="form-group">
                        <label asp-for="WebHeaderId">Navigation Header</label>
                        <select asp-for="WebHeaderId" class="form-control" asp-items="ViewBag.WebHeaderId"></select>
                    </div><br>
                    <div class="col-sm-12 col-xl-3">

                        <div class="form-group">
                            <label asp-for="Position" for="numberInput">Position</label>
                            <input asp-for="Position" type="number" class="form-control" id="numberInput" placeholder="Enter Number">
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                    </div><br>

                    <div class="form-group mt-3">
                        <input type="submit" value="Create" class="btn btn-outline-success m-2" />
                        <a asp-action="Index" class="btn btn-outline-info m-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
